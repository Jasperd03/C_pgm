#include<stdio.h>
void main()
{
    int rows=5,i,j,k;
    for(i=1;i<rows;i++)
    {
        printf(" ");
    }
    printf("*\n");
    for(i=1;i<rows-1;i++)
    {
        for(k=i;k<rows-1;k++)
        {
            printf(" ");
        }
        printf("*");
        for(j=i;j>1;j--)
        {
            printf(" ");
        }
        printf("*");
        printf("\n");
    }
    for(i=1;i<=rows;i++)
    {
        printf("*");
    }
}

Output:
    *
   **
  * *
 *  *
*****
        
